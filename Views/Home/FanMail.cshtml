@{
    ViewBag.Name = "grades";
}

@model FanMailModel

<body>
    <h2>Grade Calculator</h2>
    <form method="post">
        <label>Assignments:</label>
        <input id="assignments" asp-for="assignment" />
        <br />
        <label>Group Projects:</label>
        <input id="projects" asp-for="projects" />
        <br />
        <label>Quizzes:</label>
        <input id="quizzes" asp-for="quizzes"/>
        <br />
        <label>Exams:</label>
        <input id="exams" asp-for="exams" />
        <br />
        <label>INTEX:</label>
        <input id="intex" asp-for="intex"/>
        <br />

        <input type="submit" value="Calculate Grade" id="submitbutton" />
        <div asp-validation-summary="All"></div>
        <br />
    </form>
</body>